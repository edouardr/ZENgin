{
  "name": "zengin",
  "version": "0.0.1",
  "description": "Game engine built with WebGL and Typescript",
  "main": "src/app.ts",
  "engines": {
    "node": "6.6.0"
  },
  "scripts": {
    "postinstall": "typings install --overwrite --save",
    "clean": "rimraf ./dist",
    "test": "jest --coverage",
    "build-dev": "webpack",
    "build-prod": "npm run clean && webpack -p",
    "update:packages": "rm -rf node_modules && npm update --save-dev && npm update --save"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edouardr/zengin.git"
  },
  "keywords": [
    "game",
    "engine",
    "webgl",
    "typescript"
  ],
  "author": "Edouard Riviere",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/edouardr/zengin/issues"
  },
  "homepage": "https://github.com/edouardr/zengin#readme",
  "devDependencies": {
    "jest-cli": "^15.1.1",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.3",
    "typings": "^1.4.0",
    "webpack": "^1.13.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "scriptPreprocessor": "<rootDir>/jest-typescript-preprocessor.js",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "/__tests__/.*\\.ts$"
  }
}
