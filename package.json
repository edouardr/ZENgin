{
  "name": "zengin",
  "version": "0.0.1",
  "description": "Game engine built with WebGL and Typescript",
  "main": "src/app.ts",
  "engines": {
    "node": "6.6.0"
  },
  "scripts": {
    "postinstall": "typings install --overwrite --save",
    "clean": "rimraf ./dist",
    "test": "jest --coverage",
    "build:dev": "webpack",
    "build:prod": "npm run clean && webpack -p",
    "update:packages": "rm -rf node_modules && npm update --save-dev && npm update --save"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edouardr/zengin.git"
  },
  "keywords": [
    "game",
    "engine",
    "webgl",
    "typescript"
  ],
  "author": "Edouard Riviere",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/edouardr/zengin/issues"
  },
  "homepage": "https://github.com/edouardr/zengin#readme",
  "devDependencies": {
    "jest-cli": "^18.1.0",
    "ts-jest": "^19.0.0",
    "ts-loader": "^2.0.0",
    "typescript": "^2.0.3",
    "typings": "^2.1.0",
    "webpack": "^2.2.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
